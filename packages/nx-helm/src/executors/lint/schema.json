{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "title": "Lint executor",
  "description": "",
  "type": "object",
  "properties": {
    "path": {
      "type": "string",
      "description": "Path to the helm chart"
    },
    "set": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "set values on the command line"
    },
    "set-file": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "set values from respective files specified via the command line"
    },
    "set-string": {
      "type": "string",
      "description": "set STRING values on the command line"
    },
    "strict": {
      "type": "boolean",
      "description": "fail on lint warnings"
    },
    "values": {
      "type": "string",
      "description": "specify values in a YAML file or a URL "
    },
    "withSubcharts": {
      "type": "boolean",
      "description": "lint dependent charts"
    }
  }
}
